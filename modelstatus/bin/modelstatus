#!/usr/bin/env python2.7

import os
import sys
import logging
import wsgiref.simple_server

root_path = os.path.realpath(os.path.dirname(os.path.realpath(__file__)) + '/..')
sys.path.append(root_path)

import modelstatus.app

application = modelstatus.app.main(['--config', os.path.join(root_path, 'etc', 'config.ini')])

httpd = wsgiref.simple_server.make_server('0.0.0.0', 8000, application)
logging.debug("Development server listening on 0.0.0.0 port 8080")
httpd.serve_forever()
